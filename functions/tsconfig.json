{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"] // Maps to your external lib folder
    }
  },
  "compileOnSave": true,
  "include": ["src", "../shared/**/*"]
}
