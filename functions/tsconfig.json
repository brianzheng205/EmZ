{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "isolatedModules": true
  },
  "compileOnSave": true,
  "include": ["src", "../shared/**/*"],
  "plugins": [
    { "transform": "typescript-transform-paths" },
    { "transform": "typescript-transform-paths", "after": true }
  ]
}
